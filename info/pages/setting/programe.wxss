/* pages/material/material_info.wxss */

.weui-navbar__title {
  width: 375rpx;
  font-size:40rpx;
}

.weui-form-preview__item {
  display: flex;
  flex-direction: row;
}

.weui-form-preview__label {
  height: 40px;
  font-size: 20px;
  color: green;
  display: flex;
  flex-direction: row;
